disrupt: new ErekirUnitType("disrupt"){{
aiController: FlyingFollowAI::new
envDisabled: 0

lowAltitude: false
flying: true
drag: 0.07
speed: 1
rotateSpeed: 2
accel: 0.1
health: 12000
armor: 9
hitSize: 46
payloadCapacity: Mathf.sqr(6f) * tilePayload
targetAir: false

engineSize: 6
engineOffset: 25.25

float orbRad: 5f, partRad: 3
int parts: 10

abilities.add(new SuppressionFieldAbility(){{
	orbRadius: orbRad
	particleSize: partRad
	y: 10
	particles: parts
}})

for(int i : Mathf.signs){
	abilities.add(new SuppressionFieldAbility(){{
		orbRadius: orbRad
		particleSize: partRad
		y: -32f / 4
		x: 43f * i / 4
		particles: parts
		//visual only, the middle one does the actual suppressing
		display: active: false
	}})
}

